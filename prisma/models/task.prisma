model Task {
  id            String     @id @default(uuid())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  //
  title         String
  description   String
  completedDate DateTime?
  status        TaskStatus @default(Incomplete)

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

enum TaskStatus {
  Incomplete
  Complete
  InProgress
}
